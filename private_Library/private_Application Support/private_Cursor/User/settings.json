{
  // Editor settings
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.minimap.enabled": false,
  "editor.glyphMargin": false,
  "editor.largeFileOptimizations": false,
  "editor.insertSpaces": true,
  "editor.cursorBlinking": "smooth",
  "editor.lineHeight": 24,
  "editor.lineNumbers": "relative",
  "editor.fontFamily": "'FiraCode Nerd Font Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.codeLensFontFamily": "FiraCode Nerd Font Mono",
  "editor.inlayHints.fontFamily": "FiraCode Nerd Font Mono",
  "editor.inlineSuggest.fontFamily": "FiraCode Nerd Font Mono",
  "editor.accessibilitySupport": "off",
  "editor.guides.indentation": true,
  "editor.renderLineHighlight": "none",
  "editor.quickSuggestions": {
    "strings": true
  },

  // Workbench settings
  "workbench.editor.enablePreview": false,
  "workbench.statusBar.visible": true,
  "workbench.editor.highlightModifiedTabs": false,
  "workbench.tree.indent": 15,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.preferredHighContrastColorTheme": "Community Material Theme Darker High Contrast",
  "workbench.preferredDarkColorTheme": "Tomorrow Night Blue",
  "workbench.preferredLightColorTheme": "Community Material Theme Ocean",
  "workbench.list.horizontalScrolling": true,
  "workbench.activityBar.location": "hidden",
  "workbench.fontAliasing": "antialiased",
  "breadcrumbs.enabled": false,

  // Extensions
  "extensions.autoUpdate": "onlyEnabledExtensions",

  // Git
  "git.enableSmartCommit": true,
  "git.autofetch": true,

  // Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.autoReveal": false,
  "explorer.confirmPasteNative": false,

  // Terminal
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.copyOnSelection": true,

  // Debug
  "debug.console.fontFamily": "Fira Code",

  // SCM
  "scm.inputFontFamily": "Fira Code",

  // Files
  "files.trimTrailingWhitespace": true,

  // Security
  "security.workspace.trust.untrustedFiles": "open",

  // Telemetry
  "telemetry.enableCrashReporter": false,
  "redhat.telemetry.enabled": false,

  // Prettier
  "prettier.resolveGlobalModules": true,
  "prettier.printWidth": 120,
  "prettier.singleQuote": true,

  // Language-specific formatters
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },

  // Disable Java language features
  "[java]": {
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {}
  },
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },

  // Other extensions
  "tailwindCSS.emmetCompletions": true,
  "guides.enabled": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",

  // Cursor-specific settings
  "cursor.composer.textSizeScale": 1.3,
  "cursor.composer.usageSummaryDisplay": "never",

  // Neovim extension - use your actual Neovim with all plugins
  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.darwin": "/Users/haziq.jasni/.config/nvim/init.lua",
  "vscode-neovim.useCtrlKeysForNormalMode": false,
  "vscode-neovim.useCtrlKeysForInsertMode": false,
  "vscode-neovim.compositeKeys": {
    "jj": {
      "command": "vscode-neovim.escape"
    }
  },

  // Enable folding to work with nvim-ufo
  "editor.foldingStrategy": "auto",
  "editor.folding": true,
  "editor.showFoldingControls": "always",
  "git.openRepositoryInParentFolders": "never",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.formatDocument": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "workbench.iconTheme": "bearded-icons",
  "hediet.vscode-drawio.resizeImages": null,
  "peacock.favoriteColors": [
    {
      "name": "Angular Red",
      "value": "#dd0531"
    },
    {
      "name": "Azure Blue",
      "value": "#007fff"
    },
    {
      "name": "JavaScript Yellow",
      "value": "#f9e64f"
    },
    {
      "name": "Mandalorian Blue",
      "value": "#1857a4"
    },
    {
      "name": "Node Green",
      "value": "#215732"
    },
    {
      "name": "React Blue",
      "value": "#61dafb"
    },
    {
      "name": "Something Different",
      "value": "#832561"
    },
    {
      "name": "Svelte Orange",
      "value": "#ff3d00"
    },
    {
      "name": "Vue Green",
      "value": "#42b883"
    }
  ],
  "workbench.colorCustomizations": {
    "tab.activeBackground": "#1857a4",
    "tab.inactiveBackground": "#2d2d30",
    "tab.activeForeground": "#ffffff",
    "tab.inactiveForeground": "#969696",
    "tab.activeBorder": "#1857a4",
    "tab.unfocusedActiveBackground": "#2d2d30",
    "tab.unfocusedActiveForeground": "#969696",
    "tab.unfocusedActiveBorder": "#2d2d30",
    "tab.activeModifiedBorder": "#b0b0b0",
    "tab.inactiveModifiedBorder": "#808080",
    "tab.unfocusedActiveModifiedBorder": "#808080",
    "gitDecoration.modifiedResourceForeground": "#ffffff",
    "gitDecoration.addedResourceForeground": "#ffffff",
    "gitDecoration.deletedResourceForeground": "#ffffff",
    "gitDecoration.untrackedResourceForeground": "#ffffff",
    "editorGroupHeader.tabsBackground": "#252526"
  },
  "githubPullRequests.pullBranch": "never",
  "workbench.editorAssociations": {
    "*.vsix": "default"
  },
  "githubPullRequests.pushBranch": "always"
}
